{
  "compilerOptions": {
    "charset": "utf-8",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "pretty": true,
    "strictNullChecks": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
